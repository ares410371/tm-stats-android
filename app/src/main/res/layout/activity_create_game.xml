<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateGameActivity">

  <android.support.v7.widget.Toolbar
    android:id="@+id/toolbar_create_game"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="?attr/colorPrimary"
    android:elevation="4dp"
    android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

  <AutoCompleteTextView
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:id="@+id/plans_ac_text_view" app:layout_constraintStart_toStartOf="parent"
      android:layout_marginStart="16dp" android:layout_marginTop="16dp"
      android:hint="@string/plans_text_view_hint" android:textColor="@android:color/black"
      app:layout_constraintTop_toBottomOf="@+id/toolbar_create_game" android:layout_marginEnd="8dp"
      app:layout_constraintEnd_toEndOf="parent"/>
  <View
      android:layout_width="wrap_content"
      android:layout_height="1dp"
      android:id="@+id/player1_view"
      app:layout_constraintTop_toBottomOf="@+id/plans_ac_text_view" android:layout_marginTop="16dp"
      android:background="@android:color/black" app:layout_constraintStart_toStartOf="parent"
      android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>
  <TextView
      android:text="Player 1"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:id="@+id/player1_tag_text_view" app:layout_constraintTop_toBottomOf="@+id/player1_view"
      android:layout_marginBottom="8dp"
      app:layout_constraintBottom_toTopOf="@+id/p1_name_edit_text" android:layout_marginTop="8dp"
      app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
      app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:textAlignment="center"/>
  <EditText
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:inputType="textPersonName"
      android:ems="10"
      android:id="@+id/p1_name_edit_text"
      android:hint="@string/name_text_view_hint" android:layout_marginStart="16dp"
      app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="16dp"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/player1_tag_text_view"
      app:layout_constraintHorizontal_bias="1.0"/>
  <EditText
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:inputType="textPersonName"
      android:ems="10"
      android:id="@+id/p1_points_edit_text"
      android:hint="@string/points_text_view_hint" android:layout_marginStart="16dp"
      app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="16dp"
      app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
      app:layout_constraintTop_toBottomOf="@+id/p1_name_edit_text"/>
  <AutoCompleteTextView
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:id="@+id/p1_corporation_ac_text_view" android:hint="@string/corporation_text_view_hint"
      android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/p1_points_edit_text"
      app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
      app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>
  <View
      android:layout_width="wrap_content"
      android:layout_height="1dp"
      android:id="@+id/player2_view"
      app:layout_constraintTop_toBottomOf="@+id/p1_corporation_ac_text_view"
      android:background="@android:color/black" app:layout_constraintStart_toStartOf="parent"
      android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
      android:layout_marginTop="16dp"/>
  <TextView
      android:text="Player 2"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:id="@+id/player1_tag_text_view2"
      android:textAlignment="center"
      android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/player2_view"
      app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginEnd="8dp" android:layout_marginTop="8dp"/>
  <EditText
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:inputType="textPersonName"
      android:ems="10"
      android:id="@+id/p2_name_edit_text" android:layout_marginTop="8dp"
      app:layout_constraintTop_toBottomOf="@+id/player1_tag_text_view2" android:layout_marginStart="16dp"
      app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="16dp"
      app:layout_constraintEnd_toEndOf="parent" android:hint="@string/name_text_view_hint"/>
  <EditText
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:inputType="textPersonName"
      android:ems="10"
      android:id="@+id/p2_points_edit_text" android:layout_marginTop="16dp"
      app:layout_constraintTop_toBottomOf="@+id/p2_name_edit_text" android:layout_marginStart="16dp"
      app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="16dp"
      app:layout_constraintEnd_toEndOf="parent" android:hint="@string/points_text_view_hint"/>
  <AutoCompleteTextView
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:id="@+id/autoCompleteTextView" android:layout_marginTop="16dp"
      app:layout_constraintTop_toBottomOf="@+id/p2_points_edit_text" app:layout_constraintStart_toStartOf="parent"
      android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
      android:hint="@string/corporation_text_view_hint"/>
</android.support.constraint.ConstraintLayout>